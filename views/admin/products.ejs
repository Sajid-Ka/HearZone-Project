        // Prevent default only for offer buttons to avoid affecting other links
        if (button.classList.contains('offer-btn') || button.classList.contains('cancel-offer-btn')) {
            e.preventDefault();
        }

        const productId = button.getAttribute('data-product-id');
        const productName = button.getAttribute('data-product-name');
        const regularPrice = button.getAttribute('data-regular-price');
        const currentOffer = button.getAttribute('data-current-offer');

        // If it's a cancel offer button
        if (button.classList.contains('cancel-offer-btn')) {
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to cancel this offer?",
                icon: 'warning',
                showCancelButton: true,
