<%- include("../../views/partials/admin/header") %>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #4361ee;
            --primary-light: #4895ef;
            --secondary: #3a0ca3;
            --success: #2ec4b6;
            --danger: #e63946;
            --warning: #f9c74f;
            --info: #4cc9f0;
            --light: #f8f9fa;
            --dark: #212529;
            --grey: #6c757d;
            --border-radius: 12px;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.05);
            --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
            --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
            --transition: all 0.3s ease;
        }

        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .dashboard-container {
            padding: 2rem;
            background: #f8fafc;
            max-width: 1600px;
            margin: 0 auto;
        }

        .content-header {
            margin-bottom: 2rem;
        }

        .content-header h2 {
            color: var(--dark);
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 1.8rem;
            letter-spacing: -0.5px;
            position: relative;
            display: inline-block;
        }

        .content-header h2::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 60px;
            height: 4px;
            background: var(--primary);
            border-radius: 2px;
        }

        .custom-table {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-md);
            overflow: hidden;
            transition: var(--transition);
            border: 1px solid rgba(0,0,0,0.03);
        }

        .custom-table:hover {
            box-shadow: var(--shadow-lg);
        }

        .custom-table table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
        }

        .custom-table thead {
            background: #f8f9fa;
        }

        .custom-table th {
            font-weight: 600;
            color: var(--dark);
            padding: 1.2rem 1rem;
            border-bottom: 2px solid #f0f0f0;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .custom-table td {
            padding: 1.2rem 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #f0f0f0;
            font-size: 0.95rem;
        }

        .custom-table tr:last-child td {
            border-bottom: none;
        }

        .custom-table tr {
            transition: var(--transition);
        }

        .custom-table tr:hover {
            background: #f8f9fa;
        }

        .action-btn {
            border-radius: 8px;
            padding: 0.6rem 1rem;
            transition: var(--transition);
            font-weight: 500;
            border: none;
            font-size: 0.9rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            min-width: 120px;
            white-space: nowrap;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-sm);
        }

        .add-btn {
            background: var(--success);
            color: white;
            min-width: 120px;
        }

        .add-btn:hover {
            background: #23b0a3;
        }

        .status-badge {
            padding: 0.35rem 0.7rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
            display: inline-block;
        }

        .status-active {
            background-color: rgba(46, 196, 182, 0.15);
            color: #21a99a;
        }

        .status-expired {
            background-color: rgba(230, 57, 70, 0.15);
            color: #d32d39;
        }

        .no-results {
            padding: 3rem;
            text-align: center;
            color: var(--grey);
        }

        .no-results i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .no-results h4 {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .no-results p {
            max-width: 500px;
            margin: 0 auto;
            opacity: 0.7;
        }

        @media (max-width: 992px) {
            .custom-table {
                overflow-x: auto;
            }
        }

        @media (max-width: 768px) {
            .dashboard-container {
                padding: 1rem;
            }
        }
    </style>
</head>

<div class="dashboard-container">
    <div class="content-header">
        <h2>Offer Management</h2>
        <button class="action-btn add-btn" data-bs-toggle="modal" data-bs-target="#createOfferModal">
            <i class="fas fa-plus-circle"></i> Add New Offer
        </button>
    </div>

    <div class="custom-table">
        <table class="table table-borderless mb-0">
            <thead>
                <tr>
                    <th scope="col">OFFER NAME</th>
                    <th scope="col">DISCOUNT TYPE</th>
                    <th scope="col">DISCOUNT VALUE</th>
                    <th scope="col">END DATE</th>
                    <th scope="col">STATUS</th>
                    <th scope="col">PRODUCTS</th>
                </tr>
            </thead>
            <tbody>
                <% if(offers.length === 0) { %>
                <tr>
                    <td colspan="7">
                        <div class="no-results">
                            <i class="fas fa-tag"></i>
                            <h4>No offers found</h4>
                            <p>Create a new offer to get started.</p>
                        </div>
                    </td>
                </tr>
                <% } else { %>
                <% offers.forEach(offer => { %>
                <tr>
                    <td><strong><%= offer.name %></strong></td>
                    <td><%= offer.discountType.charAt(0).toUpperCase() + offer.discountType.slice(1) %></td>
                    <td><%= offer.discountType === 'percentage' ? offer.discountValue + '%' : 'â‚¹' + offer.discountValue %></td>
                    <td><%= new Date(offer.endDate).toLocaleDateString() %></td>
                    <td>
                        <span class="status-badge <%= offer.isActive && new Date(offer.endDate) >= new Date() ? 'status-active' : 'status-expired' %>">
                            <%= offer.isActive && new Date(offer.endDate) >= new Date() ? 'Active' : 'Expired' %>
                        </span>
                    </td>
                    <td><%= offer.products.length %> product<%= offer.products.length !== 1 ? 's' : '' %></td>
                </tr>
                <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>

    
    <div class="modal fade" id="createOfferModal" tabindex="-1" aria-labelledby="createOfferModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createOfferModalLabel">Create New Offer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div Schrift: assistant: class="modal-body">
                    <form id="createOfferForm">
                        <div class="mb-3">
                            <label for="offerName" class="form-label">Offer Name</label>
                            <input type="text" class="form-control" id="offerName" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="discountType" class="form-label">Discount Type</label>
                            <select class="form-control" id="discountType" name="discountType" required>
                                <option value="percentage">Percentage</option>
                                <option value="fixed">Fixed Amount</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="discountValue" class="form-label">Discount Value</label>
                            <input type="number" class="form-control" id="discountValue" name="discountValue" min="0" required>
                        </div>
                        <div class="mb-3">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveNewOfferBtn">Create Offer</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const saveNewOfferBtn = document.getElementById('saveNewOfferBtn');
    const createOfferForm = document.getElementById('createOfferForm');

    saveNewOfferBtn.addEventListener('click', async function() {
        if (!createOfferForm.checkValidity()) {
            createOfferForm.reportValidity();
            return;
        }

        const formData = new FormData(createOfferForm);
        const offerData = Object.fromEntries(formData);

        try {
            saveNewOfferBtn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Creating...';
            saveNewOfferBtn.disabled = true;

            const response = await fetch('/admin/offers/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify(offerData)
            });

            const data = await response.json();
            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Offer created successfully',
                    timer: 2000,
                    showConfirmButton: false
                });

                
                const modal = bootstrap.Modal.getInstance(document.getElementById('createOfferModal'));
                modal.hide();

                
                window.location.reload();
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: data.message || 'Failed to create offer',
                    timer: 3000,
                    showConfirmButton: false
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: 'Failed to create offer. Please try again.',
                timer: 3000,
                showConfirmButton: false
            });
        } finally {
            saveNewOfferBtn.innerHTML = 'Create Offer';
            saveNewOfferBtn.disabled = false;
        }
    });

    
    document.getElementById('endDate').setAttribute('min', new Date().toISOString().split('T')[0]);
});
</script>

<%- include("../../views/partials/admin/footer") %>