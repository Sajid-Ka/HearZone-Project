        right: 0;
        bottom: 0;
        overflow: hidden;
    }

    .modal-open {
        overflow: hidden;
        padding-right: 0 !important;
    }

    .modal-backdrop {
        position: fixed;
        z-index: 1040;
    }

    /* Ensure cropper stays stable */
    .cropper-crop-box,
    .cropper-view-box {
        outline: 1px solid #39f;
        outline-color: rgba(51, 153, 255, 0.75);
    }

    /* Replace existing modal and cropper styles with these */
    .modal {
        padding: 0 !important;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    .modal-dialog {
        position: fixed;
