<style>
    /* Sidebar Styling */
    .sidebar {
        background: #222;
        color: white;
        padding: 15px;
        min-height: 550px;
        margin-left: 10px;
        border-radius: 8px;
    }

    .sidebar h5 {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .sidebar .list-group-item {
        background: transparent;
        color: white;
        border: none;
        padding: 10px 12px;
        transition: all 0.3s ease;
    }

    .sidebar .list-group-item:hover,
    .sidebar .list-group-item.active {
        background: #333;
        color: #f1c40f;
    }

    .sidebar .bi {
        font-size: 16px;
    }

    .profile-img {
        width: 80px;
        height: 80px;
        background: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
    }

    /* Mobile Responsiveness */
    @media (max-width: 768px) {
        .sidebar {
            min-height: auto;
            text-align: center;
            padding: 10px;
        }
        .sidebar .list-group-item {
            justify-content: center;
        }
    }
</style>

<div class="col-md-2 sidebar">
    <div class="d-flex flex-column align-items-center">
        <!-- Profile Image -->
        <div class="profile-img">
            <i class="bi bi-person" style="font-size: 40px; color: #ecf0f1;"></i>
        </div>
        <h5 class="text-center mb-3"><%= user.name %></h5>
    </div>
    <div class="list-group">
        <a href="/profile" class="list-group-item list-group-item-action d-flex align-items-center <%= currentRoute === '/profile' ? 'active' : '' %>">
            <i class="bi bi-person-circle me-2"></i> Profile
        </a>
        <a href="/edit-profile" class="list-group-item list-group-item-action d-flex align-items-center <%= currentRoute === '/edit-profile' ? 'active' : '' %>">
            <i class="bi bi-person me-2"></i> Edit Profile
        </a>
        <a href="/cart" class="list-group-item list-group-item-action d-flex align-items-center <%= currentRoute === '/cart' ? 'active' : '' %>">
            <i class="bi bi-cart me-2"></i> Cart
        </a>
        <a href="/orders" class="list-group-item list-group-item-action d-flex align-items-center <%= currentRoute === '/orders' ? 'active' : '' %>">
            <i class="bi bi-box me-2"></i> My Orders
        </a>
        <a href="/addresses" class="list-group-item list-group-item-action d-flex align-items-center <%= currentRoute === '/addresses' ? 'active' : '' %>">
            <i class="bi bi-geo-alt me-2"></i> Manage Addresses
        </a>
        <a href="/wallet" class="list-group-item list-group-item-action d-flex align-items-center <%= currentRoute === '/wallet' ? 'active' : '' %>">
            <i class="bi bi-wallet me-2"></i> Wallet
        </a>
        <a href="/wishlist" class="list-group-item list-group-item-action d-flex align-items-center <%= currentRoute === '/wishlist' ? 'active' : '' %>">
            <i class="bi bi-heart me-2"></i> Wishlist
        </a>
        <a href="/logout" class="btn btn-danger mt-3 w-100">Logout</a>
    </div>
</div>