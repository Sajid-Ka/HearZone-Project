
<style>

.breadcrumb-section {
    background-color: #f8f5f2; 
    padding: 10px 0;
    font-family: Arial, sans-serif; 
}


.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
}


.breadcrumb {
    display: flex;
    align-items: center;
    background: none; 
    padding: 0;
    margin: 0;
    font-size: 14px; 
}


.breadcrumb-item {
    display: flex;
    align-items: center;
    color: #6c757d; 
}


.breadcrumb-item a {
    color: #6c757d; 
    text-decoration: none; 
    transition: color 0.3s ease; 
}


.breadcrumb-item a:hover {
    color: #343a40; 
}


.breadcrumb-item.active {
    color: #343a40; 
    font-weight: 600;
}


.breadcrumb-item + .breadcrumb-item::before {
    content: ">"; 
    margin: 0 8px; 
    color: #6c757d; 
}
</style>


<div class="breadcrumb-section bg-white">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 py-3">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <% breadcrumbs.forEach(crumb => { %>
                    <li class="breadcrumb-item <%= crumb.active ? 'active' : '' %>">
                        <% if (crumb.active) { %>
                            <%= crumb.text %>
                        <% } else { %>
                            <a href="<%= crumb.url %>"><%= crumb.text %></a>
                        <% } %>
                    </li>
                <% }); %>
            </ol>
        </nav>
    </div>
</div>
