<script>
   
    document.querySelectorAll('.btn-edit').forEach(button => {
        button.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    });

    
    document.querySelectorAll('.address-card').forEach(card => {
        card.addEventListener('click', function(e) {
            if (e.target.closest('.btn-edit')) return;
            document.querySelectorAll('.address-card').forEach(c => c.classList.remove('selected'));
            this.classList.add('selected');
            this.querySelector('input[type="radio"]').checked = true;
        });
    });

    
    document.querySelectorAll('.payment-card').forEach(card => {
        card.addEventListener('click', function(e) {
            if (e.target.closest('.payment-radio')) return;
            document.querySelectorAll('.payment-card').forEach(c => c.classList.remove('selected'));
            this.classList.add('selected');
            this.querySelector('input[type="radio"]').checked = true;
        });
    });

   function updateOrderSummary(subTotal, discountAmount, couponDiscount, finalAmount, couponCode, shippingCost = 0) {
        const orderTotals = document.querySelector('.order-totals');

        
        const existingRows = orderTotals.querySelectorAll('.totals-row:not(.final):not(:first-child)');
        existingRows.forEach(row => row.remove());

       
        if (discountAmount > 0) {
            const productDiscountRow = document.createElement('div');
            productDiscountRow.className = 'totals-row discount';
            productDiscountRow.innerHTML = `
                <span>Product Discount</span>
                <span>-₹${discountAmount.toFixed(2)}</span>
            `;
            orderTotals.insertBefore(productDiscountRow, orderTotals.querySelector('.totals-row.final'));
        }

        
        if (couponDiscount > 0 && couponCode) {
            const couponRow = document.createElement('div');
            couponRow.className = 'totals-row discount';
            couponRow.innerHTML = `
                <span>Coupon Discount (${couponCode})</span>
                <span>-₹${couponDiscount.toFixed(2)}</span>
            `;
            orderTotals.insertBefore(couponRow, orderTotals.querySelector('.totals-row.final'));
        }

        
        let shippingRow = orderTotals.querySelector('.totals-row.shipping');
        if (!shippingRow) {
            shippingRow = document.createElement('div');
            shippingRow.className = 'totals-row shipping';
            orderTotals.insertBefore(shippingRow, orderTotals.querySelector('.totals-row.final'));
        }
        shippingRow.innerHTML = `
            <span>Shipping</span>
            <span>₹${shippingCost.toFixed(2)}</span>
        `;

        
        const finalAmountElement = orderTotals.querySelector('.totals-row.final span:last-child');
        finalAmountElement.textContent = `₹${finalAmount.toFixed(2)}`;
    }

    function updateCouponSection(couponCode, discountAmount) {
        const couponSection = document.querySelector('.coupon-section .section-content');
        
        couponSection.innerHTML = `
            <div class="coupon-applied">
                <div class="coupon-tag">
                    <i class="fas fa-tag"></i>
                    <span>Coupon Applied: ${couponCode} (-₹${discountAmount.toFixed(2)})</span>
                </div>
                <a href="#" class="coupon-remove" data-action="remove-coupon">
                    <i class="fas fa-times"></i> Remove
                </a>
            </div>
        `;

        
        document.querySelector('[data-action="remove-coupon"]').addEventListener('click', removeCoupon);
    }

    async function applyCoupon(event) {
        event.preventDefault();
        const couponCode = document.getElementById('couponCode').value.trim();
        const errorElement = document.getElementById('couponError');
        
        errorElement.textContent = '';
        errorElement.classList.remove('show');

        if (!couponCode) {
            errorElement.textContent = 'Please enter a coupon code';
            errorElement.classList.add('show');
            return;
        }

        try {
            const response = await fetch('/coupon/apply', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ couponCode })
            });

            const data = await response.json();

            if (data.success) {
                await Swal.fire({
                    title: 'Success',
                    text: data.message,
                    icon: 'success',
                    confirmButtonColor: '#3498db'
                });

                updateOrderSummary(
                    data.subTotal,
                    data.discountAmount,
                    data.couponDiscount,
                    data.finalAmount,
                    data.couponCode
                );

                
                updateCouponSection(data.couponCode, data.couponDiscount);
            } else {
                errorElement.textContent = data.message;
                errorElement.classList.add('show');
            }
        } catch (error) {
            console.error('Error applying coupon:', error);
            errorElement.textContent = 'Failed to apply coupon. Please try again.';
            errorElement.classList.add('show');
        }
    }

    async function removeCoupon(event) {
        event.preventDefault();

        const removeBtn = event.target.closest('[data-action="remove-coupon"]');
        if (!removeBtn) return;

        const originalText = removeBtn.innerHTML;
        removeBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Removing...';
        removeBtn.disabled = true;

        try {
            const response = await fetch('/coupon/remove', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            const data = await response.json();

            if (data.success) {
                await Swal.fire({
                    title: 'Success',
                    text: data.message,
                    icon: 'success',
                    confirmButtonColor: '#3498db',
                    timer: 3000,
                    timerProgressBar: true
                });

                updateOrderSummary(
                    data.subTotal,
                    data.discountAmount,
                    data.couponDiscount,
                    data.finalAmount,
                    null
                );

                
                const couponSection = document.querySelector('.coupon-section .section-content');
                couponSection.innerHTML = `
                    <form class="coupon-form" onsubmit="applyCoupon(event)">
                        <input type="text" id="couponCode" placeholder="Enter coupon code" required>
                        <button type="submit"><i class="fas fa-check"></i> Apply</button>
                        <div class="coupon-error" id="couponError"></div>
                    </form>
                    <% if (availableCoupons && availableCoupons.length) { %>
                        <div class="coupon-heading">Available Coupons</div>
                        <div class="coupon-options">
                            <% availableCoupons.forEach(coupon => { %>
                                <div class="coupon-option" onclick="selectCoupon('<%= coupon.code %>')">
                                    <div class="coupon-code">
                                        <%= coupon.code %>
                                        <% if (coupon.isReferral) { %>
                                            <span class="badge bg-info ms-2">Referral</span>
                                        <% } %>
                                    </div>
                                    <div class="coupon-desc">
                                        <%= coupon.discountType === 'percentage' ? coupon.value + '% off' : '₹' + coupon.value + ' off' %>
                                    </div>
                                    <% if (coupon.minPurchase) { %>
                                        <div class="coupon-min">Min. ₹<%= coupon.minPurchase %></div>
                                    <% } %>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>
                `;
            } else {
                await Swal.fire({
                    title: 'Error',
                    text: data.message || 'Failed to remove coupon',
                    icon: 'error',
                    confirmButtonColor: '#3498db'
                });
            }
        } catch (error) {
            console.error('Error removing coupon:', error);
            await Swal.fire({
                title: 'Error',
                text: 'Failed to remove coupon. Please try again.',
                icon: 'error',
                confirmButtonColor: '#3498db'
            });
        } finally {
            removeBtn.innerHTML = originalText;
            removeBtn.disabled = false;
        }
    }

    function selectCoupon(couponCode) {
        const couponInput = document.getElementById('couponCode');
        const couponForm = document.querySelector('.coupon-form');
        const errorElement = document.getElementById('couponError');

        if (couponInput && couponForm) {
            couponInput.value = couponCode;
            errorElement.classList.remove('show');
            couponForm.dispatchEvent(new Event('submit', { bubbles: true }));
        } else {
            console.error('Coupon input or form not found');
        }
    }

   
    document.addEventListener('click', function(event) {
        const couponItem = event.target.closest('.coupon-item[data-coupon-code]');
        if (couponItem) {
            const couponCode = couponItem.getAttribute('data-coupon-code');
            if (couponCode) {
                selectCoupon(couponCode);
            }
        }
    });

    
    document.addEventListener('click', function(event) {
        if (event.target.closest('[data-action="remove-coupon"]')) {
            event.preventDefault();
            removeCoupon(event);
        }
    });

    
    document.getElementById('placeOrderBtn').addEventListener('click', async () => {
        const addressId = document.querySelector('input[name="address"]:checked')?.value;
        const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked')?.value;
        const isBuyNow = <%= isBuyNow %>;

        if (!addressId) {
            Swal.fire({
                title: 'Error',
                text: 'Please select a delivery address',
                icon: 'error',
                confirmButtonColor: '#3498db'
            });
            return;
        }

        if (!paymentMethod) {
            Swal.fire({
                title: 'Error',
                text: 'Please select a payment method',
                icon: 'error',
                confirmButtonColor: '#3498db'
            });
            return;
        }

        if (paymentMethod === 'Wallet') {
            const walletBalance = parseFloat('<%= walletBalance %>');
            const finalAmount = parseFloat('<%= finalAmount %>');

            if (walletBalance < finalAmount) {
                Swal.fire({
                    title: 'Error',
                    text: 'Insufficient wallet balance',
                    icon: 'error',
                    confirmButtonColor: '#3498db'
                });
                return;
            }
        }

        try {
            const response = await fetch('/place-order', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ addressId, paymentMethod })
            });

            const data = await response.json();

            if (!response.ok || !data.success) {
                Swal.fire({
                    title: 'Error',
                    text: data.message || 'Failed to place order',
                    icon: 'error',
                    confirmButtonColor: '#3498db'
                });
                return;
            }

            if (paymentMethod === 'Wallet') {
                Swal.fire({
                    title: 'Order Placed!',
                    text: `Your order #${data.orderId} has been placed successfully using your wallet`,
                    icon: 'success',
                    confirmButtonColor: '#3498db'
                }).then(() => {
                    window.location.href = `/order-success?orderId=${data.orderId}`;
                });
            } else if (paymentMethod === 'Razorpay') {
                const options = {
                    key: '<%= razorpayKeyId %>',
                    amount: data.amount,
                    currency: data.currency,
                    name: 'Your E-commerce Store',
                    description: 'Order Payment',
                    order_id: data.razorpayOrderId,
                    handler: async function (response) {
                        try {
                            const verifyResponse = await fetch('/verify-payment', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({
                                    razorpay_payment_id: response.razorpay_payment_id,
                                    razorpay_order_id: response.razorpay_order_id,
                                    razorpay_signature: response.razorpay_signature
                                })
                            });

                            const verifyData = await verifyResponse.json();

                            if (!verifyResponse.ok || !verifyData.success) {
                                let errorMessage = verifyData.message || 'Payment verification failed';
                                
                                
                                if (verifyData.message && verifyData.message.includes('amount mismatch')) {
                                    errorMessage = 'Payment amount mismatch detected. Please contact support.';
                                }

                                await Swal.fire({
                                    title: 'Payment Failed!',
                                    text: errorMessage,
                                    icon: 'error',
                                    confirmButtonColor: '#3498db'
                                });

                                window.location.href = `/order-failure?orderId=${data.razorpayOrderId}`;
                                return;
                            }

                            
                            await Swal.fire({
                                title: 'Payment Successful!',
                                text: `Your order #${verifyData.orderId} has been placed successfully`,
                                icon: 'success',
                                confirmButtonColor: '#3498db'
                            }).then(() => {
                                window.location.href = `/order-success?orderId=${verifyData.orderId}`;
                            });
                        } catch (error) {
                            console.error('Payment verification error:', error);
                            await Swal.fire({
                                title: 'Payment Failed!',
                                text: 'An error occurred during payment verification. Please try again.',
                                icon: 'error',
                                confirmButtonColor: '#3498db'
                            }).then(() => {
                                window.location.href = `/order-failure?orderId=${data.razorpayOrderId}`;
                            });
                        }
                    },
                    prefill: {
                        name: '<%= user.name %>',
                        email: '<%= user.email %>',
                        contact: '<%= user.phone || "" %>'
                    },
                    theme: {
                        color: '#3498db'
                    },
                    modal: {
                        ondismiss: function() {
                            Swal.fire({
                                title: 'Payment Cancelled',
                                text: 'The payment failed, Please try again later',
                                icon: 'error',
                                confirmButtonColor: '#3498db'
                            }).then(() => {
                                window.location.href = `/order-failure?orderId=${data.razorpayOrderId}`;
                            });
                        }
                    }
                };

                const rzp = new Razorpay(options);
                rzp.open();
            } else {
                Swal.fire({
                    title: 'Order Placed!',
                    text: `Your order #${data.orderId} has been placed successfully`,
                    icon: 'success',
                    confirmButtonColor: '#3498db'
                }).then(() => {
                    window.location.href = `/order-success?orderId=${data.orderId}`;
                });
            }
        } catch (error) {
            console.error('Error placing order:', error);
            Swal.fire({
                title: 'Error',
                text: 'Something went wrong. Please try again.',
                icon: 'error',
                confirmButtonColor: '#3498db'
            });
        }
    });

    
    document.querySelectorAll('.edit-address-form').forEach(form => {
        const modalId = form.closest('.modal').id;
        const modal = document.getElementById(modalId);
        let originalValues = {};

        modal.addEventListener('show.bs.modal', function() {
            form.querySelectorAll('input, select').forEach(input => {
                originalValues[input.name] = input.type === 'checkbox' ? input.checked : input.value;
            });
        });

        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            const addressId = this.getAttribute('data-address-id');
            const formData = new FormData(this);
            const jsonData = Object.fromEntries(formData);

            form.querySelectorAll('.error-message').forEach(el => el.textContent = '');
            form.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));

            let hasChanges = false;
            Object.keys(jsonData).forEach(key => {
                const currentValue = key === 'isDefault' ? (jsonData[key] === 'on') : jsonData[key];
                const originalValue = key === 'isDefault' ? originalValues[key] : originalValues[key];
                if (currentValue !== originalValue) hasChanges = true;
            });

            if (!hasChanges) {
                await Swal.fire({
                    icon: 'info',
                    title: 'No Changes',
                    text: 'No changes were detected in the address',
                    confirmButtonColor: '#222'
                });
                return;
            }

            try {
                const response = await fetch(`/address/edit/${addressId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        ...jsonData,
                        isDefault: jsonData.isDefault === 'on'
                    })
                });

                const result = await response.json();

                if (response.ok) {
                    if (result.noChanges) {
                        await Swal.fire({
                            icon: 'info',
                            title: 'No Changes',
                            text: 'No changes were detected in the address',
                            confirmButtonColor: '#222'
                        });
                    } else {
                        await Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: result.message,
                            confirmButtonColor: '#222'
                        }).then(() => window.location.reload());
                    }
                } else if (result.errors) {
                    Object.entries(result.errors).forEach(([field, message]) => {
                        const errorElement = form.querySelector(`.error-message[data-field="${field}"]`);
                        const inputElement = form.querySelector(`[name="${field}"]`);
                        if (errorElement && inputElement) {
                            errorElement.textContent = message;
                            inputElement.classList.add('is-invalid');
                        }
                    });
                } else {
                    throw new Error(result.errors?.general || 'Failed to update address');
                }
            } catch (error) {
                console.error('Error updating address:', error);
                await Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message,
                    confirmButtonColor: '#222'
                });
            }
        });
    });

    function updatePaymentMethods() {
        const finalAmount = <%= finalAmount %>;
        const codOption = document.getElementById('cod');
        const codLabel = codOption.closest('.payment-card');
        
        if (finalAmount > 5000) {
            codOption.disabled = true;
            codLabel.classList.add('disabled');
            
            
            if (codOption.checked) {
                codOption.checked = false;
                document.getElementById('razorpay').checked = true;
                document.querySelector('label[for="razorpay"]').classList.add('selected');
            }
            
            
            const tooltip = document.createElement('div');
            tooltip.className = 'payment-description text-danger';
            tooltip.textContent = 'Cash on Delivery not available for orders above ₹5000';
            codLabel.appendChild(tooltip);
        } else {
            codOption.disabled = false;
            codLabel.classList.remove('disabled');
        }
    }

    
    document.addEventListener('DOMContentLoaded', async function() {
        updatePaymentMethods();

        const urlParams = new URLSearchParams(window.location.search);
        const isRetry = urlParams.get('retry') === 'true';
        const razorpayOrderId = urlParams.get('razorpayOrderId');

        if (isRetry && razorpayOrderId) {
            const addressId = document.querySelector('input[name="address"]:checked')?.value;
            if (!addressId) {
                Swal.fire({
                    title: 'Error',
                    text: 'No delivery address selected. Please select an address and try again.',
                    icon: 'error',
                    confirmButtonColor: '#3498db'
                }).then(() => {
                    window.location.href = '/cart';
                });
                return;
            }

            document.getElementById('razorpay').checked = true;
            document.querySelector('label[for="razorpay"]').classList.add('selected');
            document.querySelector('label[for="cod"]').classList.remove('selected');

            try {
                await fetch('/clear-session', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const response = await fetch('/place-order', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        addressId,
                        paymentMethod: 'Razorpay'
                    })
                });

                const data = await response.json();

                if (!response.ok || !data.success) {
                    Swal.fire({
                        title: 'Error',
                        text: data.message || 'Failed to retry payment',
                        icon: 'error',
                        confirmButtonColor: '#3498db'
                    });
                    return;
                }

                const options = {
                    key: '<%= razorpayKeyId %>',
                    amount: data.amount,
                    currency: data.currency,
                    name: 'Your E-commerce Store',
                    description: 'Order Payment',
                    order_id: data.razorpayOrderId,
                    handler: async function (response) {
                        try {
                            const verifyResponse = await fetch('/verify-payment', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({
                                    razorpay_payment_id: response.razorpay_payment_id,
                                    razorpay_order_id: response.razorpay_order_id,
                                    razorpay_signature: response.razorpay_signature
                                })
                            });

                            const verifyData = await verifyResponse.json();

                            if (verifyData.success) {
                                Swal.fire({
                                    title: 'Payment Successful!',
                                    text: `Your order #${verifyData.orderId} has been placed successfully`,
                                    icon: 'success',
                                    confirmButtonColor: '#3498db'
                                }).then(() => {
                                    window.location.href = `/order-success?orderId=${verifyData.orderId}`;
                                });
                            } else {
                                Swal.fire({
                                    title: 'Payment Failed!',
                                    text: verifyData.message || 'Payment verification failed. Please try again.',
                                    icon: 'error',
                                    confirmButtonColor: '#3498db'
                                }).then(() => {
                                    window.location.href = `/order-failure?orderId=${data.razorpayOrderId}`;
                                });
                            }
                        } catch (error) {
                            Swal.fire({
                                title: 'Payment Failed!',
                                text: 'An error occurred during payment verification. Please try again.',
                                icon: 'error',
                                confirmButtonColor: '#3498db'
                            }).then(() => {
                                window.location.href = `/order-failure?orderId=${data.razorpayOrderId}`;
                            });
                        }
                    },
                    prefill: {
                        name: '<%= user.name %>',
                        email: '<%= user.email %>',
                        contact: '<%= user.phone || "" %>'
                    },
                    theme: {
                        color: '#3498db'
                    },
                    modal: {
                        ondismiss: function() {
                            Swal.fire({
                                title: 'Payment Cancelled',
                                text: 'You closed the payment window. Please try again.',
                                icon: 'error',
                                confirmButtonColor: '#3498db'
                            }).then(() => {
                                window.location.href = `/order-failure?orderId=${data.razorpayOrderId}`;
                            });
                        }
                    }
                };

                const rzp = new Razorpay(options);
                rzp.open();
            } catch (error) {
                console.error('Error retrying payment:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Failed to initiate retry payment',
                    icon: 'error',
                    confirmButtonColor: '#3498db'
                });
            }
        }
    });
</script>

