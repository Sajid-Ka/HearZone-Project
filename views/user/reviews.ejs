<%-include("../../views/partials/user/header") %>

<!-- Add this section after header include -->
<head>
    <style>
        .reviews-page {
            padding: 80px 0;
            background-color: #f8f9fa;
            min-height: 100vh;
        }
        
        .product-info {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            margin-bottom: 30px;
        }
        
        .product-info h2 {
            color: #333;
            margin-bottom: 15px;
            font-weight: 600;
        }
        
        .review-stats {
            background: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        }
        
        .review-stats h4 {
            color: #333;
            margin-bottom: 20px;
        }
        
        .average-rating {
            font-size: 48px;
            font-weight: bold;
            color: #2c3e50;
            line-height: 1;
        }
        
        .rating-info {
            margin-left: 15px;
        }
        
        .rating {
            color: #ffd700;
            font-size: 24px;
            letter-spacing: 2px;
            margin: 5px 0;
        }
        
        .review-count {
            color: #666;
            font-size: 14px;
        }
        
        .review-item {
            background: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            transition: transform 0.2s ease;
        }
        
        .review-item:hover {
            transform: translateY(-3px);
        }
        
        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
        
        .reviewer-name {
            font-weight: 600;
            color: #2c3e50;
            font-size: 16px;
        }
        
        .review-date {
            color: #95a5a6;
            font-size: 14px;
        }
        
        .review-rating {
            margin-bottom: 10px;
        }
        
        .review-comment {
            color: #444;
            line-height: 1.6;
            font-size: 15px;
        }
        
        .back-link {
            margin-bottom: 30px;
        }
        
        .back-link .btn {
            padding: 10px 20px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .back-link .btn:hover {
            transform: translateX(-5px);
        }
        
        .back-link i {
            margin-right: 8px;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .reviews-page {
                padding: 40px 0;
            }
            
            .review-stats {
                padding: 20px;
            }
            
            .average-rating {
                font-size: 36px;
            }
            
            .rating {
                font-size: 20px;
            }
        }
    </style>
</head>

<div class="reviews-page">
    <div class="container">
        <div class="back-link">
            <a href="/product?id=<%= product._id %>" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Back to Product
            </a>
        </div>

        <div class="product-info">
            <h2><%= product.productName %></h2>
        </div>

        <div class="review-stats">
            <h4>Review Summary</h4>
            <div class="d-flex align-items-center">
                <div class="average-rating"><%= stats.averageRating.toFixed(1) %></div>
                <div class="rating-info">
                    <div class="rating">
                        <%= '★'.repeat(Math.round(stats.averageRating)) %>
                        <%= '☆'.repeat(5 - Math.round(stats.averageRating)) %>
                    </div>
                    <div class="review-count"><%= stats.totalReviews %> reviews</div>
                </div>
            </div>
        </div>

        <div class="reviews-list">
            <% reviews.forEach(review => { %>
                <div class="review-item">
                    <div class="review-header">
                        <span class="reviewer-name"><%= review.username %></span>
                        <span class="review-date">
                            <%= new Date(review.createdAt).toLocaleDateString() %>
                        </span>
                    </div>
                    <div class="review-rating">
                        <div class="rating">
                            <%= '★'.repeat(review.rating) %>
                            <%= '☆'.repeat(5 - review.rating) %>
                        </div>
                    </div>
                    <div class="review-comment">
                        <%= review.comment %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%-include("../../views/partials/user/footer") %>
