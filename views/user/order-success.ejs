<%- include('../partials/user/header') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    
    .success-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 15px;
    }
    
    .success-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        max-width: 800px;
        width: 100%;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    .success-card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(52,152,219,0.1) 0%, rgba(255,255,255,0) 70%);
        animation: pulse 6s infinite;
    }
    
    .success-header {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }
   
    .success-message {
        color: #636e72;
        font-size: 1.1rem;
        margin-bottom: 30px;
        position: relative;
        z-index: 1;
    }
    
    .success-icon {
        font-size: 100px;
        color: #3498db;
        margin: 0 auto 20px;
        position: relative;
        z-index: 1;
    }
    
    .btn-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        position: relative;
        z-index: 1;
    }
    .btn-primary {
        background: #3498db;
        border: none;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }
    .btn-primary:hover {
        background: #2980b9;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(52,152,219,0.4);
        color: white;
        text-decoration: none;
    }
    .btn-secondary {
        background: #636e72;
        border: none;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }
    .btn-secondary:hover {
        background: #2c3e50;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(99,110,114,0.4);
        color: white;
        text-decoration: none;
    }
   
    @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
    
    @media (max-width: 768px) {
        .success-card {
            padding: 30px 20px;
            margin: 20px;
        }
        .btn-container {
            flex-direction: column;
            gap: 15px;
        }
        .btn-primary, .btn-secondary {
            width: 100%;
        }
        .success-icon {
            font-size: 80px;
        }
    }
</style>
<br>
<br>
<br>
<br>
<br>
<div class="success-container">
    <div class="success-card">
        <i class="fas fa-check-circle success-icon"></i>
        <h2 class="success-header">Thank You for Your Order!</h2>
        <p class="success-message">Your order #<%= order.orderId %> has been successfully placed.</p>
        <div class="btn-container">
            <a href="/orders/<%= order.orderId %>" class="btn btn-primary">View Order Details</a>
            <a href="/shop" class="btn btn-secondary">Continue Shopping</a>
        </div>
    </div>
</div>
<br>
