<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f5f5;
        margin: 0px;
        overflow-x: hidden; 
    }

    /* Profile Section */
    .card {
        background: white;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card h4 {
        font-weight: 600;
        color: #444;
    }

    .profile-info p {
        color: #666;
    }
    .profile-info .btn-sm {
        padding: 0.25rem 0.75rem;
    }
    
    .profile-info strong {
        color: #222;
        font-weight: 600;
    }

    /* Buttons */
    .btn-dark {
        background-color: #222;
        border-radius: 8px;
        transition: all 0.3s ease;
        color: white;
    }

    .btn-dark:hover {
        background-color: #f1c40f;
        color: #222;
    }

    .btn-primary {
        background-color: #3498db;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #2980b9;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    /* Profile Picture */
    .rounded-circle {
        background: #444;
        width: 100px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 36px;
        font-weight: 600;
    }

    .profile-image-container {
        position: relative;
        width: 100px;
        height: 100px;
    }
    
    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
    }
    
    .upload-btn {
        position: absolute;
        bottom: 0;
        right: 0;
        font-size: 12px;
        padding: 2px 6px;
    }
    
    .profile-image-container .upload-btn {
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .profile-image-container:hover .upload-btn {
        opacity: 1;
    }
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    /* Address Card Styling */
    .address-card {
        padding: 15px;
        margin-bottom: 20px;
    }

    .address-card p {
        color: #666;
        margin-bottom: 10px;
    }

    .badge {
        font-size: 12px;
        padding: 5px 10px;
        border-radius: 12px;
    }

    .modal-content {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .modal-header {
        background-color: #222;
        color: white;
        border-radius: 10px 10px 0 0;
    }

    .modal-title {
        font-weight: 600;
    }

    .btn-close {
        filter: invert(1);
    }

    .form-label {
        font-weight: 500;
        color: #555;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        border: 1px solid #ddd;
    }

    .form-control:focus {
        border-color: #f1c40f;
        box-shadow: 0 0 5px rgba(241, 196, 15, 0.5);
    }

    .invalid-feedback {
        display: none;
        color: #dc3545;
        font-size: 0.875em;
        margin-top: 0.25rem;
    }
    .form-control.is-invalid ~ .invalid-feedback {
        display: block;
    }

    /* Footer styles */
    .footer {
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        background-color: #222;
        color: white;
        padding: 0;
        margin-top: 20px;
    }

    .footer #footer,
    .footer #footer-bottom {
        width: 100%;
        margin: 0;
    }

    .footer #footer .container-fluid,
    .footer #footer-bottom .container-fluid {
        padding-left: 0 !important;
        padding-right: 0 !important;
        margin: 0 !important;
        width: 100% !important;
    }

    .footer #footer .row,
    .footer #footer-bottom .row {
        margin-left: 0 !important;
        margin-right: 0 !important;
        padding-left: 15px !important;
        padding-right: 15px !important;
    }

    .footer #footer-bottom {
        background-color: #111;
    }
</style>

