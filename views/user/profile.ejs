<%- include('../partials/user/header') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f5f5;
    }

    /* Profile Section */
    .card {
        background: white;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card h4 {
        font-weight: 600;
        color: #444;
    }

    .profile-info {
        font-size: 16px;
        color: #555;
    }

    .profile-info strong {
        color: #222;
        font-weight: 600;
    }

    /* Buttons */
    .btn-dark {
        background-color: #222;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-dark:hover {
        background-color: #f1c40f;
        color: #222;
    }

    .btn-primary {
        background-color: #3498db;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #2980b9;
    }

    /* Profile Picture */
    .rounded-circle {
        background: #444;
        width: 100px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 36px;
        font-weight: 600;
    }

    .profile-image-container {
        position: relative;
        width: 100px;
        height: 100px;
    }
    
    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
    }
    
    .upload-btn {
        position: absolute;
        bottom: 0;
        right: 0;
        font-size: 12px;
        padding: 2px 6px;
    }
    
    .profile-image-container .upload-btn {
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .profile-image-container:hover .upload-btn {
        opacity: 1;
    }
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

</style>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

<br><br><br><br><br>

<div class="container-fluid mt-5">
    <div class="row">
        <%- include('../partials/user/profile/sidebar') %>

       <div class="col-md-9">
            <h2>My Account</h2>
            <div class="card p-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="profile-image-container rounded-circle me-3">
                        <% if (user.profileImage) { %>
                            <img src="/uploads/profile-images/<%= user.profileImage %>" alt="Profile" class="profile-image rounded-circle">
                        <% } else { %>
                            <div class="rounded-circle">
                                <%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>
                            </div>
                        <% } %>
                        <form action="/update-profile-image" method="POST" enctype="multipart/form-data">
                            <input type="file" name="profileImage" id="profileImage" accept="image/*" class="d-none" onchange="this.form.submit()">
                            <label for="profileImage" class="btn btn-primary upload-btn">Change</label>
                        </form>
                    </div>
                    <div>
                        <h4><%= user.name || 'User Name' %></h4>
                        <p class="text-muted mb-0">Member since <%= user.createdOn ? new Date(user.createdOn).toLocaleDateString() : 'N/A' %></p>
                    </div>
                </div>

                <h4>Profile Details</h4>
                <!-- <% if (message) { %>
                    <div class="alert alert-info"><%= message %></div>
                <% } %> -->

                <div class="profile-info mb-3">
                    <p><strong>Full Name:</strong> <%= user.name || 'Not provided' %></p>
                    <p><strong>Email:</strong> <%= user.email || 'Not provided' %></p>
                    <p><strong>Phone:</strong> <%= user.phone || 'Not provided' %></p>
                    <p><strong>Account Status:</strong> <%= user.isBlocked ? 'Blocked' : 'Active' %></p>
                </div>

                <div class="d-flex justify-content-end">
                    <a href="/edit-profile" class="btn btn-dark">Edit Profile</a>
                </div>
            </div>

            <div class="card p-4 mt-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>Saved Addresses</h4>
                    <a href="/address" class="btn btn-primary btn-sm">Add New Address</a>
                </div>
                <% if (addresses && addresses.length > 0) { %>
                    <% addresses.forEach((address, index) => { %>
                        <div class="profile-info mb-3">
                            <p><strong>Address <%= index + 1 %>:</strong></p>
                            <p><%= address.street %>, <%= address.city %>, <%= address.state %> - <%= address.postalCode %></p>
                            <p><strong>Country:</strong> <%= address.country %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="profile-info mb-3">
                        <p class="text-muted">Address not added</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<br><br><br>

<script>
    <% if (message) { %>
        new Noty({
            type: '<%= message.type || "success" %>',
            layout: 'topRight',
            text: '<%= message.text %>',
            timeout: 3000,
            theme: 'bootstrap-v4'
        }).show();
    <% } %>
</script>

<%- include('../partials/user/footer') %>